{
  "name": "@echo/desktop",
  "version": "0.1.2",
  "private": true,
  "description": "Self-hosted mic and screen sharing app.",
  "author": "Echo Chamber",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run build -w @echo/server && tsx src/main.ts",
    "build": "npm run build -w @echo/server && tsc -p tsconfig.json",
    "pack:win": "npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "@echo/server": "0.1.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "electron": "30.0.0",
    "electron-builder": "^24.13.3",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.echochamber.app",
    "productName": "Echo Chamber",
    "electronVersion": "30.0.0",
    "icon": "build/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "!dist/win-unpacked/**",
      "!dist/*.exe",
      "!dist/*.blockmap"
    ],
    "extraResources": [
      {
        "from": "../server/public",
        "to": "server/public"
      },
      {
        "from": "build/icon.png",
        "to": "assets/icon.png"
      }
    ],
    "win": {
      "target": ["nsis"],
      "signAndEditExecutable": false,
      "artifactName": "Echo-Chamber-Setup-${version}.${ext}",
      "icon": "build/icon.ico"
    }
  }
}
