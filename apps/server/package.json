{
  "name": "@echo/server",
  "version": "0.1.2",
  "private": true,
  "type": "commonjs",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.js",
      "default": "./dist/server.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js",
      "require": "./dist/cli.js",
      "default": "./dist/cli.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cli.js",
    "hash:password": "node scripts/hash-password.cjs",
    "setup:env": "node scripts/setup-env.cjs",
    "tls:dev": "node scripts/generate-tls.cjs"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.17.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.30",
    "@types/ws": "^8.5.10",
    "selfsigned": "^2.4.1",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  }
}
