  "productName": "Echo Chamber",
  "version": "0.2.3",
  "identifier": "com.echochamber.app",
  "build": {
    "frontendDist": "../viewer"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "nsis": {
        "installMode": "currentUser",
        "startMenuFolder": "Echo Chamber"
      }
    }
  },
  "plugins": {
